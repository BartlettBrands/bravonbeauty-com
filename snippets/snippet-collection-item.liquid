<div class="collection-item">
  <a href="{{ collection.url }}">
    <div class="text-wrapper row">
      {% comment %}<div class="bg"></div>{% endcomment %}
      <div class="title">
        {{ collection.title }}
      </div>
      {% assign trans_product = 'collections.product' | t %}
      {% assign trans_products = 'collections.products' | t %}
      <p class="product-count">{{ collection.all_products_count }} {{ collection.all_products_count | pluralize: trans_product, trans_products }}</p>
    </div>
    <div class="image-wrapper">
{% comment %}      <div class="hover"></div>{% endcomment %}
      {% if collection.image %}
        {{ collection.image.src | collection_img_url: 'master' | img_tag: collection.image.alt }}
      {% else %}
        {{ collection.products.first.featured_image.src | product_img_url: 'large' | img_tag: collection.title }}
      {% endif %}
    </div><!-- .coll-image-wrap -->
  </a>
</div>
{% cycle 'clear-row': '', '', '<div class="clearfix"></div>' %}
